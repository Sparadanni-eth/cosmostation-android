<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chain_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/chain_view"
        android:layout_width="@dimen/space_4"
        android:layout_height="0dp"
        android:background="@color/color_sub_puple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chain_img"
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_48"
        android:src="@drawable/chain_cosmos"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginVertical="@dimen/space_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chain_name"
        style="@style/font_sb_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:textColor="@color/color_base01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chain_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ibc_send_status"
        style="@style/font_sb_10"
        android:layout_width="@dimen/space_64"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_20"
        android:background="@drawable/round_box_faster"
        android:gravity="center"
        android:paddingVertical="@dimen/space_3"
        android:text="IBC Send"
        android:textColor="@color/color_base01"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/chain_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chain_name" />

</androidx.constraintlayout.widget.ConstraintLayout>