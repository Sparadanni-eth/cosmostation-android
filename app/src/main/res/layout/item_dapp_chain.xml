<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chain_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/check_view"
        android:layout_width="@dimen/space_4"
        android:layout_height="0dp"
        android:background="@color/color_sub_puple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chain_img"
        android:layout_width="@dimen/space_48"
        android:layout_height="@dimen/space_48"
        android:layout_marginVertical="@dimen/space_10"
        android:layout_marginStart="@dimen/space_20"
        android:src="@drawable/chain_cosmos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chain_name"
        style="@style/font_sb_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_15"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toEndOf="@+id/chain_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dapps_title"
        style="@style/font_sm_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:text="Dapps :"
        android:textColor="@color/color_base03"
        android:layout_marginTop="@dimen/space_5"
        app:layout_constraintStart_toEndOf="@+id/chain_img"
        app:layout_constraintTop_toBottomOf="@+id/chain_name" />

    <TextView
        android:id="@+id/dapps"
        style="@style/font_sb_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4"
        android:textColor="@color/color_base02"
        app:layout_constraintStart_toEndOf="@+id/dapps_title"
        app:layout_constraintTop_toTopOf="@+id/dapps_title"
        app:layout_constraintBottom_toBottomOf="@+id/dapps_title"/>

    <ImageView
        android:id="@+id/check_img"
        android:src="@drawable/icon_check"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:layout_marginEnd="@dimen/space_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>