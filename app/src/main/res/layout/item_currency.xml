<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/currency_view_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/currency_view"
        android:layout_width="@dimen/space_4"
        android:layout_height="0dp"
        android:background="@color/color_sub_puple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/currency_img"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_marginStart="@dimen/space_20"
        android:src="@drawable/icon_usd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_name"
        style="@style/font_sb_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginTop="@dimen/space_15"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toEndOf="@+id/currency_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_country"
        style="@style/font_sm_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginBottom="@dimen/space_15"
        android:textColor="@color/color_base02"
        app:layout_constraintStart_toEndOf="@+id/currency_img"
        app:layout_constraintTop_toBottomOf="@+id/currency_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/select_img"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        android:layout_marginEnd="@dimen/space_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_check"/>

</androidx.constraintlayout.widget.ConstraintLayout>