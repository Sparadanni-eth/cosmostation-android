<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <View
        android:id="@+id/top_view"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/round_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_title"
        style="@style/font_sb_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_16"
        android:text="@string/title_stake_info"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_view" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/color_base07"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

    <TextView
        android:id="@+id/dialog_msg0_bullet"
        style="@style/font_sm_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:text="•"
        android:textColor="@color/color_base01"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_msg0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_msg0" />

    <TextView
        android:id="@+id/dialog_msg0"
        style="@style/font_sm_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_16"
        android:gravity="start"
        android:text="@string/str_sui_guide_msg0"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toEndOf="@+id/dialog_msg0_bullet"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/dialog_msg1_bullet"
        style="@style/font_sm_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:text="•"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_msg1" />

    <TextView
        android:id="@+id/dialog_msg1"
        style="@style/font_sm_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:gravity="start"
        android:text="@string/str_sui_guide_msg1"
        android:textColor="@color/color_base01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_msg1_bullet"
        app:layout_constraintTop_toBottomOf="@id/dialog_msg0" />

    <TextView
        android:id="@+id/dialog_msg2_bullet"
        style="@style/font_sm_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:text="•"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_msg2" />

    <TextView
        android:id="@+id/dialog_msg2"
        style="@style/font_sm_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:gravity="start"
        android:text="@string/str_sui_guide_msg2"
        android:textColor="@color/color_base01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_msg2_bullet"
        app:layout_constraintTop_toBottomOf="@id/dialog_msg1" />

    <TextView
        android:id="@+id/dialog_msg3_bullet"
        style="@style/font_sm_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_20"
        android:text="•"
        android:textColor="@color/color_base01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_msg3" />

    <TextView
        android:id="@+id/dialog_msg3"
        style="@style/font_sm_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginEnd="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_40"
        android:gravity="start"
        android:text="@string/str_sui_guide_msg3"
        android:textColor="@color/color_base01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_msg3_bullet"
        app:layout_constraintTop_toBottomOf="@id/dialog_msg2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_20"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginBottom="@dimen/space_20"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_msg3">

        <Button
            android:id="@+id/btn_confirm"
            style="@style/font_sb_14"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_54"
            android:layout_weight="1"
            android:background="@drawable/button_common_bg"
            android:text="@string/str_confirm"
            android:textAllCaps="false"
            android:textColor="@color/color_base01" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>